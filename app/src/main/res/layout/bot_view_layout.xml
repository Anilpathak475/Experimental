<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.stfalcon.chatkit.messages.MessagesList
            android:id="@+id/chat_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:incomingTextSize="@dimen/ts_regular"
            app:outcomingTextSize="@dimen/ts_regular"
            app:dateHeaderTextSize="@dimen/ts_small"
            app:incomingTimeTextSize="@dimen/ts_small"
            app:outcomingTimeTextSize="@dimen/ts_small"
            app:incomingBubblePaddingBottom="10dp"
            app:incomingBubblePaddingRight="10dp"
            app:incomingBubblePaddingLeft="10dp"
            app:incomingBubblePaddingTop="10dp"
            app:outcomingBubblePaddingBottom="10dp"
            app:outcomingBubblePaddingRight="10dp"
            app:outcomingBubblePaddingLeft="10dp"
            app:outcomingBubblePaddingTop="10dp"
            android:layout_weight="1" />

        <com.stfalcon.chatkit.messages.MessageInput
            android:id="@+id/chat_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f1f1f1"
            app:inputButtonDefaultBgColor="@color/chat_button_color"
            app:inputButtonDefaultBgDisabledColor="#f1f1f1"
            app:inputHint="@string/chat_hint"
            app:inputTextSize="14sp" />
    </LinearLayout>
</LinearLayout>