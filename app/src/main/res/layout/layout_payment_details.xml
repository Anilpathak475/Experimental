<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_pay_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shailesh"
                android:textColor="#4a4a4a"
                android:textSize="18sp" />

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="15dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/white_circle_big" />

                <ImageView
                    android:id="@+id/img_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_united_arab_emirates"
                    android:elevation="5dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/text_with_bullet"
                android:textColor="@color/light_grey"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_card_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:enabled="false"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="1234"
                android:textColor="#4a4a4a"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/cross" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30/05/2018"
                android:layout_gravity="center_vertical"
                android:textColor="#9b9b9b"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/txt_payment_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textColor="#9b9b9b"
                android:text="AED 100"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="#7bce1b"
                android:padding="10dp"
                android:text="Successful"
                android:textSize="14sp"
                android:textColor="@color/white" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#9b9b9b"
            android:text="Notes / Actions"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txt_reason"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:text="Incorrect account Details"
            android:textColor="#4a4a4a"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_live_chat"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:background="#da291c"
                android:padding="10dp"
                android:text="Live Chat"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn__update_info"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="#da291c"
                android:padding="10dp"
                android:text="Update Info"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>